{
    "name": "multiple_histograms_exaflow_aggregator",
    "desc": "Multiple Histograms",
    "label": "Multiple Histograms (Exaflow)",
    "enabled": true,
    "components": ["AGGREGATION_SERVER"],
    "type": "exaflow",
    "inputdata": {
        "y": {
            "label": "Variable to distribute among bins.",
            "desc": "Variable to distribute among bins.",
            "types": ["real", "int", "text"],
            "stattypes": ["numerical", "nominal"],
            "notblank": true,
            "multiple": false
        },
        "x": {
            "label": "Grouping variables",
            "desc": "Nominal variables for grouping bins.",
            "types": ["int", "text"],
            "stattypes": ["nominal"],
            "notblank": false,
            "multiple": true
        }
    },
    "parameters": {
        "bins": {
            "label": "Number of bins",
            "desc": "Number of bins for numerical histograms.",
            "types": ["int"],
            "notblank": false,
            "multiple": false,
            "default": 20,
            "min": 1,
            "max": 100
        }
    }
}
