{
    "name": "ttest_independent",
    "desc": "Test the difference in means between two independent groups.",
    "label": "T-Test Independent (Exaflow)",
    "enabled": true,
    "components": ["AGGREGATION_SERVER"],
    "type": "exaflow",
    "inputdata": {
        "y": {
            "label": "Variable of interest",
            "desc": "A numerical variable.",
            "types": ["real", "int"],
            "stattypes": ["numerical"],
            "notblank": true,
            "multiple": false
        },
        "x": {
            "label": "Grouping variable",
            "desc": "A nominal variable.",
            "types": ["text", "int"],
            "stattypes": ["nominal"],
            "notblank": true,
            "multiple": false
        }
    },
    "parameters": {
        "alt_hypothesis": {
            "label": "Alternative Hypothesis",
            "desc": "Specifies whether group A is different from, greater than, or less than group B.",
            "types": ["text"],
            "notblank": true,
            "multiple": false,
            "default": "two-sided",
            "enums": {
                "type": "list",
                "source": ["two-sided", "less", "greater"]
            }
        },
        "alpha": {
            "label": "Alpha",
            "desc": "The significance level.",
            "types": ["real"],
            "notblank": true,
            "multiple": false,
            "default": 0.05,
            "min": 0.0,
            "max": 1.0
        },
        "groupA": {
            "label": "Group A",
            "desc": "Category of the grouping variable used as group A.",
            "types": ["text", "int"],
            "notblank": true,
            "multiple": false,
            "enums": {
                "type": "input_var_CDE_enums",
                "source": ["x"]
            }
        },
        "groupB": {
            "label": "Group B",
            "desc": "Category of the grouping variable used as group B.",
            "types": ["text", "int"],
            "notblank": true,
            "multiple": false,
            "enums": {
                "type": "input_var_CDE_enums",
                "source": ["x"]
            }
        }
    }
}
